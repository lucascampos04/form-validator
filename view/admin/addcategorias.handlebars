{{#if error}}
    {{#each error}}
        <div class="alert alert-danger">{{text}}</div>
    {{/each}}
{{/if}}

<div class="card">
    <div class="card-body">
        <form action="/nova" method="POST">
        <label for="nome">Nome</label>
        <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control">

        <label for="slug">Slug</label>
        <input type="text" name="slug" id="slug" placeholder="Sluh da categoria" class="form-control">

        <button type="submit" class="btn btn-success mt-4">Criar Categoria</button>
</form>
    </div>
</div>

