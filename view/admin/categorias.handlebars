<h2>Lista de categorias</h2>
<hr>
<a href="/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small> <br>
            <small>Data: {{data}}</small>
        </div>
    </div>
{{else categorias}}

{{/each}}